@layout()
  @slot('meta')
    <meta name="description" content="Browse and search our awesome movie list" />
  @endslot

  <form method="GET" action="{{ route('movies.index') }}">
    <div class="flex items-end gap-3 pt-4">
      @!form.input({
        label: 'Title Search',
        name: 'search',
        type: 'search',
        value: filters.search
      })

      @form.input({ type: 'select', label: 'Status', name: 'status' })
        <option value="">All</option>
        @each (status in movieStatuses)
          <option value="{{ status.id }}" {{ html.attrs({ selected: status.id == filters.status }) }}>
            {{ status.name }}
          </option>
        @endeach
      @end

      @form.input({ type: 'select', label: 'Sort', name: 'sort' })
        @each (sortOption in movieSortOptions)
          <option value="{{ sortOption.id }}" {{ html.attrs({ selected: sortOption.id == filters.sort }) }}>
            {{ sortOption.text }}
          </option>
        @endeach
      @end

      @button({ type: 'submit' })
        Search
      @end
    </div>
  </form>

  <h2>All Movies</h2>
  <div class="flex flex-wrap -mx-6">
    @each((movie, index) in movies)
    <div class="w-full lg:w-1/3 px-3">
      @!movie.card( { movie, class: 'w-full', showWriterDirector: true, showStatus: true })
    </div>
    @endeach
  </div>

  <div class="flex items-center gap-2 pt-3 pb-6">
    @if (movies.hasPages)
      <a
        class="w-8 h-8  p-2 flex items-center justify-center border border-slate-200 rounded"
        href="{{ movies.getUrl(movies.firstPage) }}">
        <<
      </a>
    @endif

    @if (movies.currentPage > movies.firstPage)
      <a
        class="w-8 h-8  p-2 flex items-center justify-center border border-slate-200 rounded"
        href="{{ movies.getPreviousPageUrl() }}">
        <
      </a>
    @endif

    @each(item in pagination)
      <a
        {{
          html.attrs({
            href: item.url,
            class: [
              "w-8 h-8  p-2 flex items-center justify-center border border-slate-200 rounded",
              { "bg-slate-100 border-indigo-500": item.isActive }
            ]
          })
        }}>
        {{ item.page }}
      </a>
    @end

    @if (movies.currentPage < movies.lastPage)
      <a
        class="w-8 h-8  p-2 flex items-center justify-center border border-slate-200 rounded"
        href="{{ movies.getNextPageUrl() }}">
        >
      </a>
    @endif

    @if (movies.hasPages)
      <a
        class="w-8 h-8  p-2 flex items-center justify-center border border-slate-200 rounded"
        href="{{ movies.getUrl(movies.lastPage) }}">
        >>
      </a>
    @endif

  </div>
@end
